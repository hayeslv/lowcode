{
  "name": "vites",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Hayes Lv<417703682@qq.com>(https://github.com/hayeslv/)",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-zh"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build"
  },
  "dependencies": {
    "element-plus": "^2.1.11",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@hayeslv/eslint-config": "0.1.4",
    "@types/node": "^17.0.21",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vitejs/plugin-vue-jsx": "^1.3.8",
    "eslint": "^8.11.0",
    "sass": "^1.49.9",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vite-plugin-windicss": "^1.8.4",
    "vue-tsc": "^0.29.8",
    "windicss": "^3.5.1"
  },
  "eslintConfig": {
    "extends": [
      "@hayeslv"
    ],
    "ignorePatterns": [
      "auto-imports.d.ts"
    ],
    "rules": {
      "@typescript-eslint/member-delimiter-style": [
        "warn",
        {
          "multiline": {
            "delimiter": "semi",
            "requireLast": true
          },
          "singleline": {
            "delimiter": "semi",
            "requireLast": false
          }
        }
      ],
      "@typescript-eslint/no-use-before-define": "off",
      "no-return-assign": "off"
    }
  }
}
